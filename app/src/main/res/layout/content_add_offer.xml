<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.labikaomra.activities.AddOfferActivity"
    tools:showIn="@layout/activity_add_offer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/editTextLayout"
                style="@style/AuthFieldContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_add_a_photo_pry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_phote" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnStartDay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/startday"
                    android:imeOptions="actionDone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnAttendStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:imeOptions="actionDone"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/attend_start_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/start_time"
                    android:imeOptions="actionDone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnBackDay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:imeOptions="actionDone"
                    android:text="@string/back_day"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnAttendEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/attend_end_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:imeOptions="actionDone"
                    android:text="@string/end_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnLocation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnContentOfferImgs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/choose_multi_imgs"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:orientation="vertical"
                    android:padding="@dimen/pad_5dp"
                    android:text="@string/end_time"
                    android:textColor="@color/colorPrimary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shap_back"
                        android:paddingBottom="15dp"
                        android:paddingTop="@dimen/pad_5dp"
                        android:text="@string/type_status"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black" />

                    <RadioGroup
                        android:id="@+id/radio_group_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="@string/families"

                            />

                        <RadioButton
                            android:id="@+id/radioButton32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/single" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/button_style2"
                    android:orientation="vertical"
                    android:padding="@dimen/pad_5dp"
                    android:text="@string/end_time"
                    android:textColor="@color/colorPrimary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shap_back"
                        android:paddingBottom="15dp"
                        android:paddingTop="@dimen/pad_5dp"
                        android:text="@string/Transportation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black" />

                    <RadioGroup
                        android:id="@+id/radio_group_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:checked="true"
                            android:text="@string/normal"

                            />

                        <RadioButton
                            android:id="@+id/radioButton22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vip" />
                    </RadioGroup>
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_dest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@color/colorPrimary"
                    android:entries="@array/type_places"
                    android:padding="10dp"
                    android:prompt="@string/Enter_Distination" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/hotelNameField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_assignment_ind_pry"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/hotelname_hint"
                        android:imeOptions="actionNext"
                        android:singleLine="true"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/dealsField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_assignment_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/deals_hint"
                        android:imeOptions="actionNext"
                        android:singleLine="true"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/chairsNumField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_format_list_numbered_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/chairs_count_hint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/priceplaceField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/priceplace"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/pricebusField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/pricebus"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/pricetotalField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/pricetotal"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:singleLine="true"></EditText>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAddOffer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/editTextLayout"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/button_style"
                android:padding="@dimen/padding_8"
                android:text="@string/add_offer"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
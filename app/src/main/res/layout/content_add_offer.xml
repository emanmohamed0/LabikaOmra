<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.labikaomra.activities.AddOfferActivity"
    tools:showIn="@layout/activity_add_offer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/editTextLayout"
                style="@style/AuthFieldContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_add_a_photo_pry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photo" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnStartDay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/startday"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnAttendStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/attend_start_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/start_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnBackDay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/back_day"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnAttendEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/attend_end_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/end_time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnLocation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnContentOfferImgs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@drawable/button_style2"
                    android:padding="@dimen/padding_8"
                    android:text="@string/choose_multi_imgs"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp18" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/hotelNameField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_assignment_ind_pry"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/hotelname_hint"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/dealsField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_assignment_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/deals_hint"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/priceField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/price_hint"
                        android:inputType="number"></EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/chairsNumField"
                        style="@style/AuthEditText"
                        android:drawableLeft="@drawable/ic_assignment_ind_pry"
                        android:drawablePadding="@dimen/dp8"
                        android:hint="@string/chairs_count_hint"
                        android:inputType="number"></EditText>
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_hotel_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@color/colorPrimary"
                    android:entries="@array/types_hotel"
                    android:padding="10dp"
                    android:prompt="@string/hotel_level_spinner"
                    android:verticalScrollbarPosition="defaultPosition" />

                <Spinner
                    android:id="@+id/spinner_bus_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:background="@color/colorPrimary"
                    android:entries="@array/types_bus"
                    android:padding="10dp"
                    android:prompt="@string/bus_level_spinner" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAddOffer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/editTextLayout"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/button_style"
                android:padding="@dimen/padding_8"
                android:text="@string/add_offer"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

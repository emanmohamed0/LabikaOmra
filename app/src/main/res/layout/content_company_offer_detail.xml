<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_company_offer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.labikaomra.activities.CompanyOfferDetailActivity"
    tools:showIn="@layout/activity_company_offer_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardBackgroundColor="#091a32"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_style"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:background="@color/colorPrimary" />

                        <ss.com.bannerslider.views.BannerSlider
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="50dp"
                            app:paddingEnd="120dp"
                            app:pager_animation="CubeIn" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_below="@id/slider"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="48dp"
                            android:background="@color/colorAccent" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilrImg"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            app:civ_border_color="@color/colorAccent"
                            app:civ_border_width="3dp"
                            android:background="@drawable/button_style"/>

                        <!--<RatingBar-->
                            <!--android:id="@+id/profile_pharmacy_rate"-->
                            <!--style="@style/Base.Widget.AppCompat.RatingBar.Small"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="bottom"-->
                            <!--android:layout_marginLeft="20dp"-->
                            <!--android:numStars="5"-->
                            <!--android:paddingTop="3dp"-->
                            <!--android:rating="4"-->
                            <!--android:stepSize=".1"-->
                            <!--android:theme="@style/RatingBar" />-->

                        <TextView
                            android:id="@+id/hotelNameTxt"
                            android:layout_width="130dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="115dp"
                            android:background="@drawable/button_style"
                            android:gravity="center"
                            android:textColor="#FFF" />

                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:cardElevation="2dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/about_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_keyboard_arrow_down_whit"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_8"
                        android:paddingRight="@dimen/padding_14"
                        android:text="Offer Detail"
                        android:textColor="@android:color/white"
                        app:buttonColor="@color/colorPrimary" />


                    <LinearLayout
                        android:id="@+id/detailOffer"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/pad_10dp">

                            <TextView
                                android:id="@+id/dispaly_nameCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/companyname_hint"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:layout_marginRight="@dimen/pad_5dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/pad_10dp"
                                android:text="@string/type_bus"
                                android:layout_marginRight="@dimen/pad_5dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/food"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/pad_10dp"
                                android:text="Type_Food"
                                android:layout_marginRight="@dimen/pad_5dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/hotels"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Type_Hotels"
                                android:layout_marginRight="@dimen/pad_5dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/seat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="@string/Number_seat"
                                android:layout_marginRight="@dimen/pad_5dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/pad_10dp"
                                android:text="Price"
                                android:layout_marginRight="@dimen/pad_5dp"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageCompany"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:scaleType="fitXY"
                            android:src="@drawable/ka" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="@dimen/dp8">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <TableRow android:gravity="right">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/locationTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_weight="1"
                                    android:textColor="@color/about_description_color" />

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:padding="4dp"
                                    android:src="@drawable/ic_gps_fixed_pry" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapview"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
